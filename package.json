{
    "name": "stock",
    "version": "1.0.0",
    "description": "Stock assistant",
    "author": "VisualSJ",
    "main": "browser.js",

    "contributions": {
        "profile": {
            "editor": {
                "current": {
                    "label": "Stock Code",
                    "default": ""
                },
                "interval": {
                    "label": "Refresh Interval",
                    "default": 20
                },
                "numerical": {
                    "label": "Price",
                    "default": true
                },
                "amplitude": {
                    "label": "Amplitude",
                    "default": false
                }
            }
        },
        "preferences": {
            "properties": {
                "current": {
                    "ui": "ui-input"
                },
                "interval": {
                    "ui": "ui-num-input",
                    "attribute": {
                        "step": 1,
                        "min": 5
                    }
                },
                "numerical": {
                    "ui": "ui-checkbox"
                },
                "amplitude": {
                    "ui": "ui-checkbox"
                }
            }
        }
    }
}
